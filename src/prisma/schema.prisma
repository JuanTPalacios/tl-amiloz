// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuarios {
  id         Int         @id @default(autoincrement())
  nombre     String
  contrasena String
  apellido   String
  email      String
  telefono   String
  rolId      Int
  Ofertas    Ofertas[]
  Prestamos  Prestamos[]
  Roles      Roles       @relation(fields: [rolId], references: [id])
}

model Roles {
  id          Int        @id @default(autoincrement())
  nombre      String
  descripcion String
  Usuarios    Usuarios[]
}

model Ofertas {
  id        Int         @id @default(autoincrement())
  titulo    String
  monto     Int
  plazo     String
  quotas    Int
  userId    Int
  Prestamos Prestamos[]
  Usuarios  Usuarios    @relation(fields: [userId], references: [id])
}

model Prestamos {
  id               Int      @id @default(autoincrement())
  fecha_aceptacion DateTime
  aprobado         Boolean
  fecha_aprobacion DateTime
  entregado        Boolean
  fecha_desembolso DateTime
  userId           Int
  ofertaId         Int
  Cuotas           Cuotas[]
  Ofertas          Ofertas  @relation(fields: [ofertaId], references: [id])
  Usuarios         Usuarios @relation(fields: [userId], references: [id])
}

model Cuotas {
  id            Int             @id @default(autoincrement())
  descripcion   String
  fecha_pago    DateTime
  monto_inicial Float
  monto_pagado  Float
  pendiente     Boolean
  prestamoId    Int
  Transacciones Transacciones[]
  Prestamos     Prestamos       @relation(fields: [prestamoId], references: [id])
}

model Transacciones {
  id             Int      @id @default(autoincrement())
  billingReceipt String //  id de transaccion en stripe o proveedor de pagos para agrupar transacciones de 1 abono
  fecha          DateTime
  monto          Float
  descripcion    String
  userId         Int
  cuotaId        Int
  reverted       Boolean  @default(false)
  Cuotas         Cuotas   @relation(fields: [cuotaId], references: [id])
}
